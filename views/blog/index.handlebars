<link href="/css/gallery-materialize.css" rel="stylesheet">

<body class="blog">
    <!-- Navbar and Header -->
    <nav class="nav-extended blue darken-4">
        <div class="nav-background">
            <img class="active" src="img/background.png" alt="background">
        </div>
        <div class="nav-wrapper container">
            <a href="/" class="brand-logo"><i class="material-icons">lock_open</i>Locksport</a>
            <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
            <ul class="right hide-on-med-and-down">
                <li><a href="/">Home</a></li>
                <li class="active"><a href="#">Blog</a></li>
                <li><a href="/docs">Docs</a></li>
            </ul>

            <div class="nav-header center">
                <h1>BLOG</h1>
                <div class="tagline">My picks and creations</div>
            </div>
        </div>

        <!-- Fixed Masonry Filters -->
        <div class="categories-wrapper blue darken-3">
            <div class="categories-container">
                <ul class="categories container">
                    <li class="active"><a href="#all">All</a></li>
                    <li><a href="#pintumbler">Pin Tumbler</a></li>
                    <li><a href="#dd">Disc Detainer</a></li>
                    <li><a href="#wafer">Wafer</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <ul class="side-nav" id="nav-mobile">
        <li><a href="index.html"><i class="material-icons">lock_open</i>Home</a></li>
        <li class="active"><a href="blog.html"><i class="material-icons">edit</i>Blog</a></li>
        <li><a href="docs.html"><i class="material-icons">school</i>Docs</a></li>
    </ul>


    <div id="portfolio" class="section gray">
        <div class="container">
            <div class="gallery row">
                <div class="col l4 m6 s12 gallery-item gallery-filter all">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">About</span>
                            <p>This is where I'll post about locks I've picked or had trouble with, and tools I've
                                created.</p>
                        </div>
                    </div>
                </div>


                {{#each posts}}
                <div class="col l4 m6 s12 gallery-item gallery-expand gallery-filter pintumbler">
                    <div class="gallery-curve-wrapper">
                        <a class="gallery-cover gray" style="height: 300px;">
                            <img src="{{imgPath}}" alt="{{title}}">
                        </a>
                        <div class="gallery-header">
                            <span>{{title}}</span>
                        </div>
                        <div class="gallery-body">
                            <div class="title-wrapper">
                                <h3>{{title}}</h3>
                            </div>
                            <p class="description">{{postData}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}


            </div>

        </div>

    </div><!-- /.container -->